<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style
       TargetType = "{x:Type Button}"
       x:Key = "OwnerButtonTheme"
       >
        <Style.Setters>

            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="43"/>
            <Setter Property="Foreground" Value="#80808080"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType ="Button">
                        <Grid>
                            <Border x:Name="BackgroundRec" Background="#64FFFFFF" CornerRadius="10">
                                <ContentPresenter x:Name="ContentPre" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style.Setters>
    </Style>
</ResourceDictionary>